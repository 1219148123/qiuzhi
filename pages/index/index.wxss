.container{
  padding-top: 100rpx;
  /* margin-bottom: 0; */
  padding-bottom: 0;
  
}
.display{
  width: 100%;
  height: 500rpx;
  background-color: #fff;
}
.lunbo{
  margin:0 auto;
  margin-top: 22rpx;
  width: 90%;
  border-radius: 20rpx;
  overflow: hidden;
}
.tower-swiper .tower-item {
  transform: scale(calc(0.5 + var(--index) / 10));
  margin-left: calc(var(--left) * 100rpx - 150rpx);
  z-index: var(--index);
}
.function{
  margin-top: 27rpx;
  display: flex;
  justify-content: space-around;
}
.fun-box{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.fun-img{
  margin:0 auto;
  margin-bottom: 15rpx;
  width: 70rpx;
  height: 70rpx;
}
.fun-font{
  font-size: 24rpx;
}

.panel{
  background-color: #fff;
  width: 100%;
  margin-top: 20rpx;
}
.header{
  padding:20rpx 30rpx;
  font-weight: 700;
}
.footer{
  display: flex;
  justify-content: center;
}
.div-bottom{
  margin:20rpx 0;
