<cu-custom bgColor="bg-gradual-orange" isBack="{{true}}">
	<view slot="backText">返回</view>
</cu-custom>

<form>
  <view class="cu-bar bg-white solid-bottom margin-top">
    <view class="action">
      <text class="cuIcon-title text-orange "></text> 房子详情
    </view>
  </view>
  <view class="cu-form-group align-start margin-top">
		<view class="title">房子描述</view>
		<textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaBInput" placeholder="具体工作内容 "></textarea>
	</view>
  	<view class="cu-bar bg-white margin-top">
		<view class="action">
			图片上传
		</view>
		<view class="action">
			{{imgList.length}}/4
		</view>
	</view>
	<view class="cu-form-group">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>
	

  <view class="cu-form-group margin-top">
		<view class="title">预期价位</view>
		<input placeholder="例 : 150元/天 或 3000元/月"></input>
	</view>

  <view class="cu-bar bg-white solid-bottom margin-top">
    <view class="action">
      <text class="cuIcon-title text-orange "></text> 联系方式
    </view>
  </view>
	<view class="cu-form-group margin-top">
		<view class="title">邮件</view>
		<input placeholder="选填"></input>
	</view>
  <view class="cu-form-group">
		<view class="title">手机号码</view>
		<input></input>
		<view class="cu-capsule radius">
			<view class="cu-tag bg-orange">
				+86
			</view>
			<view class="cu-tag line-orange">
				中国大陆
			</view>
		</view>
	</view>
  <view class="cu-bar bg-white solid-bottom margin-top">
    <view class="action">
      <text class="cuIcon-title text-orange "></text> 相关信息
    </view>
  </view>
  <view class="cu-form-group">
		<view class="title">房子地址</view>
		<input placeholder="详细地址"></input>
	</view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-orange lg round">提交信息</button>
  </view>
</form>
